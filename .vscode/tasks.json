{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "[UTILITY][FIX HEADEERS]",
            "type": "shell",
            "command": "python FixHeaders.py",
            "problemMatcher": [
                "$gradle"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "[UTILITY][REPLACE TABS WITH SPACES]",
            "type": "shell",
            "command": "python ReplaceTabsWithSpaces.py",
            "problemMatcher": [
                "$gradle"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "[LINUX][CMAKE][CREATE]",
            "type": "shell",
            "command": "cd Build-Linux && cmake .. -DCMAKE_BUILD_TYPE=Debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gradle"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            },
            "dependsOn": "[UTILITY][FIX HEADEERS]"
        },
        {
            "label": "[LINUX][BUILD][DEBUG]",
            "type": "shell",
            "command": "cmake --build Build-LINUX --target Quake-2 --config DEBUG -j16",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo":false,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            },
            "dependsOn":"[LINUX][CMAKE][CREATE]"
        },
        {
            "label": "[WINDOWS][CMAKE][CREATE]",
            "type": "shell",
            "command": "cd Build-Windows && cmake .. -DCMAKE_BUILD_TYPE=Debug -G \"Visual Studio 16 2019\"",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gradle"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "dependsOn": "[UTILITY][FIX HEADEERS]"
        },
        {
            "label": "[WINDOWS][BUILD][DEBUG]",
            "type": "shell",
            "command": "cmake --build Build-Windows --target Quake-2 --config DEBUG",
            "problemMatcher": [
                "$msCompile"
            ],
            "presentation": {
                "echo":false,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            },
            "dependsOn":"[WINDOWS][CMAKE][CREATE]"
        }
        ,
        {
            "label": "[WINDOWS][BUILD][CLEAN]",
            "type": "shell",
            "command": "cmake --build Build-Windows --target clean --config DEBUG",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gradle"
            ],
            "presentation": {
                "echo":false,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "dependsOn":"[WINDOWS][CMAKE][CREATE]"
        }
    ]
}