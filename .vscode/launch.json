    "version": "0.2.0",
    "configurations": [
        {
            "name": "[WINDOWS][RUN][DEBUG]",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Build-Windows/Debug/Quake-2.exe",
            "cwd": "${workspaceRoot}/runDir",
            //"symbolSearchPath": "${workspaceRoot}/runDir",
            "args": [ "-w", "1680", "-h", "900" ],
            "externalConsole": false,
            "logging": {
                "moduleLoad": false,
                "trace": true,
            },
            "preLaunchTask": "[WINDOWS][BUILD][DEBUG]"
        },
        {
            "name": "[UTILITY][PYTHON][RENAME C TO CPP]",
            "type": "python",
            "request": "launch",
            "program": "CtoCPP.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "[UTILITY][PYTHON][ADD GUARDS]",
            "type": "python",
            "request": "launch",
            "program": "FixHeaders.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "[UTILITY][PYTHON][REPLACE TABS WITH SPACES]",
            "type": "python",
            "request": "launch",
            "program": "ReplaceTabsWithSpaces.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}